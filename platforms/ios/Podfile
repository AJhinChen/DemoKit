source 'https://github.com/CocoaPods/Specs.git'

project 'DemoKit.xcodeproj'

def settarget
platform :ios, '9.0'

#
#核心框架
#

#刷新动画
pod 'MJRefresh'
#图片加载封装
pod 'SDWebImage', '~> 4.0'
#Block封装
pod 'BlocksKit', '2.2.5'
#响应式编程
pod 'ReactiveCocoa', '2.3.1'
#布局
pod 'Masonry'
#网络请求
pod 'AFNetworking', '~> 3.0'
#Loading
pod 'MBProgressHUD+JDragon'
#数据模型转换
pod 'Mantle'
#动态表单
pod 'XLForm'
#AOP面向切片编程
pod 'Aspects'
#缓存机制
pod 'YYCache'
#字典赋值检查
pod 'NSDictionary-NilSafe'
#内存泄露检查工具
pod 'MLeaksFinder'
#浏览器
pod 'AXWebViewController', '~> 0.6.0'

#常用框架
#正则表达式封装
pod 'RegexKitLite-NoWarning', '1.1.0'

end

target 'DemoKit' do
settarget
end

#pod update --verbose --no-repo-update
